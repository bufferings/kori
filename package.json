{
  "name": "kori-workspace",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.3",
  "scripts": {
    "example:getting-started": "pnpm --filter kori-example start:getting-started",
    "example:usage": "pnpm --filter kori-example start:usage",
    "build": "turbo build",
    "clean": "pnpm -r exec -- sh -c 'rm -rf dist node_modules/.cache *.tsbuildinfo'",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "dev": "turbo dev --parallel",
    "dev:getting-started": "pnpm --filter kori-example dev:getting-started",
    "dev:usage": "pnpm --filter kori-example dev:usage"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@types/node": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-x": "^4.15.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "lefthook": "^1.10.1",
    "prettier": "3.4.2",
    "tsx": "catalog:",
    "turbo": "^2.5.4",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  }
}
