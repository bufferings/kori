{
  "name": "kori-workspace",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "clean:root": "rimraf .turbo",
    "clean": "turbo run clean:root clean",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "build": "turbo run build",
    "dev": "turbo watch dev:getting-started dev:advanced-usage",
    "test": "turbo run test",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm sync:version",
    "changeset:publish": "changeset publish",
    "sync:version": "turbo run sync:version",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@korix/eslint-config": "workspace:*",
    "@korix/script": "workspace:*",
    "eslint": "catalog:",
    "lefthook": "2.0.13",
    "prettier": "3.7.4",
    "rimraf": "catalog:",
    "turbo": "2.7.2",
    "vitepress": "1.6.4"
  }
}
