{
  "name": "kori-pino-adapter",
  "version": "0.0.1",
  "description": "Pino logger adapter for Kori framework",
  "type": "module",
  "author": "mitz (@bufferings)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bufferings/kori"
  },
  "homepage": "https://github.com/bufferings/kori",
  "bugs": "https://github.com/bufferings/kori/issues",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      }
    },
    "files": [
      "dist"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist-dev/index.d.ts",
      "import": "./dist-dev/index.js"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "dev:clean": "rimraf dist-dev tsconfig.tsbuildinfo",
    "dev:build": "tsc",
    "dev:watch": "tsc -w",
    "publish:clean": "rimraf dist tsconfig.publish.tsbuildinfo",
    "publish:build": "pnpm run publish:clean && tsup && tsc -p tsconfig.publish.json"
  },
  "dependencies": {
    "kori": "workspace:*"
  },
  "peerDependencies": {
    "pino": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/pino": "^7.0.5",
    "pino": "9.7.0",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
