{
  "name": "@korix/nodejs-adapter",
  "version": "0.0.1-20250708.8",
  "description": "Node.js adapter for Kori framework",
  "type": "module",
  "author": "mitz (@bufferings)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bufferings/kori"
  },
  "homepage": "https://github.com/bufferings/kori",
  "bugs": "https://github.com/bufferings/kori/issues",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      }
    }
  },
  "exports": {
    ".": {
      "types": "./dist-dev/index.d.ts",
      "import": "./dist-dev/index.js"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "dev:clean": "rimraf dist-dev tsconfig.tsbuildinfo",
    "dev:build": "tsc",
    "dev:watch": "tsc -w",
    "publish:clean": "rimraf dist tsconfig.publish.tsbuildinfo",
    "publish:build": "pnpm run publish:clean && tsup && tsc -p tsconfig.publish.json"
  },
  "dependencies": {
    "@hono/node-server": "1.15.0",
    "@korix/kori": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
