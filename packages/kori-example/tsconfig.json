{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "kori": ["../../kori/src/index.ts"],
      "kori/*": ["../../kori/src/*"],
      "kori-zod-schema": ["../../kori-zod-schema/src/index.ts"],
      "kori-zod-schema/*": ["../../kori-zod-schema/src/*"],
      "kori-zod-validator": ["../../kori-zod-validator/src/index.ts"],
      "kori-zod-validator/*": ["../../kori-zod-validator/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"],
  "references": [
    { "path": "../kori" },
    { "path": "../kori-nodejs-adapter" },
    { "path": "../kori-zod-schema" },
    { "path": "../kori-zod-validator" }
  ]
}
